{
  "name": "ScreenerBot",
  "version": "0.1.110",
  "description": "ScreenerBot Electron Edition - Automated Solana DeFi Trading Bot",
  "main": "src/main.js",
  "author": "ScreenerBot",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "sync-version": "node -e \"const fs=require('fs');const c=fs.readFileSync('../Cargo.toml','utf8');const m=c.match(/^version\\s*=\\s*\\\"([^\\\"]+)\\\"/m);if(m){const p=JSON.parse(fs.readFileSync('package.json','utf8'));if(p.version!==m[1]){p.version=m[1];fs.writeFileSync('package.json',JSON.stringify(p,null,2)+'\\n');console.log('Synced version to '+m[1])}}\"",
    "prestart": "npm run sync-version",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-deb": "^7.6.0",
    "@electron-forge/maker-dmg": "^7.6.0",
    "@electron-forge/maker-rpm": "^7.6.0",
    "@electron-forge/maker-wix": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.0",
    "electron": "^33.2.1"
  }
}
